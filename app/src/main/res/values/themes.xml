<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeliExplorer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/light_yellow</item>
        <item name="android:editTextBackground">@color/white_two</item>
        <item name="fontFamily">@font/harabara_mais_demo</item>
    </style>

    <style name="Theme.MeliExplorerActivities" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/lighter_yellow</item>
        <item name="android:editTextBackground">@color/white_two</item>
    </style>

    <style name="Theme.MeliExplorerViews" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:background">@color/white_two</item>
    </style>

    <style name="Theme.MeliArticlesViews" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:background">@color/light_yellow</item>
    </style>
</resources>